<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="app.clic_and_pay" class="Payum\Core\Bridge\Symfony\Builder\GatewayFactoryBuilder">
            <argument>Poliofu\SyliusClicAndPayPlugin\Payum\SyliusPaymentGatewayFactory</argument>
            <tag name="payum.gateway_factory_builder" factory="clic_and_pay" />
        </service>

        <service id="Poliofu\SyliusClicAndPayPlugin\Form\Type\SyliusGatewayConfigurationType">
            <tag name="sylius.gateway_configuration_type" type="clic_and_pay" label="Clic&amp;Pay" />
            <tag name="form.type" />
        </service>

        <service id="Poliofu\SyliusClicAndPayPlugin\Payum\Action\CaptureAction" public="true">
            <argument type="service" id="sylius.http_client" />
            <tag name="payum.action" factory="clic_and_pay" alias="payum.action.capture" />
        </service>
    </services>
</container>
